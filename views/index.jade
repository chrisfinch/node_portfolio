h1= title
#projects
	- if (typeof(projects) != 'undefined')
		- each project in projects
			div.project
				div.created_at= project.created_at
				div.title 
					a(href="/blog/"+project._id)!= project.title
				div.url 
					a(href="http://"+project.url)!= project.url
				
				- if (typeof(project.image) != 'undefined')
					div.image
						- var a = project.imageBase64
						span=a
						img(src="/public/images/uploads/"+project.image.filename)

				div.body= project.body